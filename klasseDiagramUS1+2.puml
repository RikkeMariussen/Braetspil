        -showAllGames()
    }

    class User{
        -String userName
        -Integer userId
        -String email
        -String password
        -MyCollection myCollection
    }

    class MyCollection{
        -String listName
        -Integer listId
        -List <Game> games
        -quickAddGame(Integer gameId, Integer listId)
        -quickRemoveGame(Integer gameId, Integer listId)
    } 

    class Game {
        -String title
        -Integer gameId: UUID
        -String description
        -int minNOOfPlayers
        -int maxNOOfPlayers
        -int minAge
        -int maxAge
        -int releaseYear
        -List <String> languages
